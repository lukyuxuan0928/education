<div class="title-container">
  <h1>Edit leave</h1>
</div>

<% if @errors.present? %>
  <div class="alert alert-danger errors">
    <% @errors.each do |error| %>
      <li> <%= error %></li>
    <% end %>
  </div>
<% end %>

<%= form_for @leave, url: {action: "update"} do |form| %>
  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.text_field :start_date, type: "date", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.text_field :end_date, type: "date", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :student %>
    <%= form.collection_select(:student_id, Student.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit  class: "btn btn-primary"%>
  </div>
<% end %>
