<h1>
  <%= @student.name %>
</h1>

<h2>
  Description
</h2>
<p>
  <%= @student.description %>
</p>

<h2>
  Course
</h2>
<p>
  <%= @student.course %>
</p>


<div>
  <p>
    <%= button_to "Edit", edit_student_path(@student), class: "btn btn-default" %>
    <%= button_to "Delete", student_path(@student), data: {
      confirm: "Are you sure you want to delete #{@student.name}?"
      }, method: :delete, class: "btn btn-default" %>
  </p>
</div>
