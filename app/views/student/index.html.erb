<div class="title-container">
  <h1>Students</h1>
  <%= link_to "New student", new_student_path, class: "btn btn-default" %>
</div>

<div class="students">
  <% @students.each do |student| %>
    <div class ="student">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to student.name, student_path(student) %></h3>
          <p><%= truncate(student.description, length: 150) %></p>
          <p>
            <%= link_to "Edit", edit_student_path(student) %>
            <%= link_to "Delete", student_path(student), data: {
              confirm: "Are you sure you want to delete #{student.name}?"
              }, method: :delete %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

</div>
